<ul class="grid    gutter  gutter--large    masonry  masonry--loading">

    {% for item in items %}

        <li class="grid__item    gutter__item    masonry__item    u-width-1-of-1  u-width-1-of-2-from-large">

                {% if item.component %}

                    {% render '@' + item.component, item.context %}

                {% else %}

                    {{ item }}

                {%  endif %}

        <!-- /li -->

    {% endfor %}

</ul>
